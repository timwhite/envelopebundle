{% extends 'EnvelopeBundle:Default:base.html.twig' %}

{% block page_title %}Dashboard{% endblock %}
{% block page_subtitle %}One day there will be pretty graphs with an overview here{% endblock %}

{% block page_content %}

    {% for flashMessage in app.session.flashbag.get('warning') %}
        <div class="alert alert-warning fade in">
            <button class="close" data-dismiss="alert"><i class="glyphicon glyphicon-remove-circle"></i></button>
            <i class="fa fa-exclamation-triangle"></i>
            {{ flashMessage }}
        </div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="flash-notice">
            {{ flashMessage }}
        </div>
    {% endfor %}
{% endblock %}