{% extends 'AvanzuAdminThemeBundle:layout:base-layout.html.twig' %}
{% block page_content %}
    <div class="row">
        <div class="col-sm-6">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Imports</h3>
                    <div class="box-tools pull-right">
                    </div><!-- /.box-tools -->
                </div><!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Date</th>
                            <th>Account</th>
                            <th># Transactions</th>
                        </tr>
                        </thead>
                    {% for import in imports %}
                        <tr>
                            <td>
                                {{ import.id }}
                            </td>
                            <td>{{ import.importtime|localizeddate('short', 'medium') }}</td>
                            <td>{% if import.transactions|length > 0 %}{{ import.transactions[0].account }}{% endif %}</td>
                            <td>{{ import.transactions|length }}</td>

                        </tr>
                    {% endfor %}
                    </table>
                </div>
                <div class="box-footer">
                </div><!-- box-footer -->
            </div><!-- /.box -->
        </div><!-- col -->

        <div class="col-sm-6">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Import Transactions</h3>
                    <div class="box-tools pull-right">
                    </div><!-- /.box-tools -->
                </div><!-- /.box-header -->
                <div class="box-body">
{{ form(importform) }}
                </div>
                <div class="box-footer">
                </div><!-- box-footer -->
            </div><!-- /.box -->
        </div><!-- col -->

        {% if lastimport != null %}
            <div class="col-sm-6">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">Import into {{ lastimportaccount }}</h3>
                        <div class="box-tools pull-right">
                        </div><!-- /.box-tools -->
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Date</th>
                                <th>Description</th>
                                <th>Amount</th>
                            </tr>
                            </thead>
                            <tr><th colspan="3">Duplicate Transactions</th></tr>
                        {% for duplicate in dups %}
                            <tr class="danger">
                                <td>{{ duplicate.date|localizeddate('short', 'none') }}</td>
                                <td>{{ duplicate.fullDescription }}</td>
                                <td>{{ duplicate.amount|localizedcurrency('AUD') }}</td>

                            </tr>

                        {% endfor %}
                            <tr>
                                <th colspan="3">Imported Transactions</th>
                            </tr>
                            {% for transaction in lastimport.transactions %}
                                <tr>
                                    <td>{{ transaction.date|localizeddate('short', 'none') }}</td>
                                    <td>{{ transaction.description }}</td>
                                    <td align="right">{{ transaction.amount|localizedcurrency('AUD') }}</td>
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                    <div class="box-footer">
                    </div><!-- box-footer -->
                </div><!-- /.box -->
            </div><!-- col -->
        {% endif %}


    </div><!-- row -->

{% endblock %}