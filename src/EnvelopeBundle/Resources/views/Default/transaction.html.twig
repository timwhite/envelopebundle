{% extends 'AvanzuAdminThemeBundle:layout:base-layout.html.twig' %}
{% block page_content %}
    <div class="row">
        <div class="col-sm-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Transactions {{ transaction.id }} details</h3>
                    <div class="box-tools pull-right">
                        <span class="label label-info">{{ transaction.account.name }}</span>
                        {% if transaction.unassignedsum != 0 %}
                        <span class="label label-warning">Unbalanced Transaction</span>
                        {% endif %}
                        <button class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fa fa-minus"></i></button>
                    </div><!-- /.box-tools -->
                </div><!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Date</th>
                            <th colspan="2">Description</th>

                            <th>Amount</th>
                            <th>Unassigned Amount</th>
                        </tr>
                        </thead>
                            <tr>
                                <td>{{ transaction.date|localizeddate('short', 'none') }}</td>
                                <td>{{ transaction.description }}</td>
                                <td><small>{{ transaction.fulldescription }}</small></td>
                                <td align="right">{{ transaction.amount|localizedcurrency('AUD') }}</td>
                                <td align="right">{{ transaction.unassignedsum|localizedcurrency('AUD') }}</td>
                            </tr>
                        {% if transaction.budgettransactions|length > 0 %}
                            <thead>
                                <th></th>
                                <th colspan="2">Budget Account</th>
                                <th>Amount</th>
                            </thead>
                            <tbody>
                            {% for budgettransaction in transaction.budgettransactions %}
                                <tr>
                                    <td></td>
                                    <td colspan="2">{{ budgettransaction.budgetaccount.budgetname }}</td>
                                    <td align="right">{{ budgettransaction.amount|localizedcurrency('AUD') }}</td>
                                    <td></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        {% endif %}
                    </table>
                    {% form_theme addform 'bootstrap_3_layout.html.twig' %}
                    {{ form_start(addform) }}
                    {{ form_widget(addform) }}
                    {{ form_end(addform) }}
                </div>
                <div class="box-footer">
                </div><!-- box-footer -->
            </div><!-- /.box -->
        </div><!-- col -->


    </div><!-- row -->

{% endblock %}