{% extends 'base.html.twig' %}
{% block page_title %}Budget Transactions{% endblock %}
{% block page_subtitle %}All transactions in budget accounts{% endblock %}

{% block page_content %}
    <div class="row">

        {% set collapsed = 1 %}
        {% if budgetaccounts|length < 2 %}
            {% set collapsed = 0 %}
        {% endif %}
        {%  for budgetaccount in budgetaccounts %}
        <div class="col-md-6 col-lg-4">
            <div class="box {% if collapsed %}collapsed-box{% endif %}">
                <div class="box-header with-border">
                    <h3 class="box-title">{{ budgetaccount.budgetname }} Transactions ({{ budgetaccount.budgettransactions|length }})
                        {% if budgetaccount.budgetstats %}<span class="label label-warning">{{ budgetaccount.budgetstats.AverageFortnightlySpend|format_currency('AUD') }}</span>{% endif %}
                    </h3>
                    <div class="box-tools pull-right">
                        <span class="label {% if budgetaccount.balance < 0 %}label-danger{% elseif budgetaccount.balance == 0 %}label-warning{% else %}label-success{% endif %}">{{ budgetaccount.balance|format_currency('AUD') }}</span>
                        <button class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fa {% if collapsed %}fa-plus{% else %}fa-minus{% endif %}"></i></button>
                    </div><!-- /.box-tools -->
                </div><!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-striped datatable">
                        <thead>
                        <tr>
                            <th>Date</th>
                            <th>Description</th>
                            <th>Budget</th>

                        </tr>
                        </thead>
                        <tbody>
                    {% for budgettransaction in budgetaccount.budgettransactions %}
                        <tr>
                            <td><a href="{{ path('envelope_transaction', {'id': budgettransaction.transaction.id}) }}">{{ budgettransaction.transaction.date|date('d/m/y') }}</a></td>
                            <td>{{ budgettransaction.transaction.description }}</td>
                            <td align="right" {% if budgettransaction.amount < 0 %}class="text-danger"{% endif %} ><span data-toggle="tooltip" title="{{ budgettransaction.transaction.account }}: {{ budgettransaction.transaction.amount|format_currency('AUD') }} / {{ budgettransaction.transaction.unassignedsum|format_currency('AUD') }}">{{ budgettransaction.amount|format_currency('AUD') }}</span></td>

                        </tr>
                    {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="box-footer">
                </div><!-- box-footer -->
            </div><!-- /.box -->
        </div><!-- col -->
        {% endfor %}
    </div><!-- row -->

{% endblock %}

{% block javascripts_inline %}
    <script src="{{ asset('assets/vendor/datatables-sorting-datetime-moment/js/datetime-moment.js') }}"></script>
    <script>
        $(function () {
            $.fn.dataTable.moment( 'DD/MM/YY' );
            $('.datatable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": true,
                "order": [[ 0, "desc" ]],
            });
        });
    </script>
{% endblock %}